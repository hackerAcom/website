<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>factorial</title>
    <script>
        var fact=1;
        var i;
        function factorials(){
            var a=document.getElementById('factorial').value;
            for(var i=1; i<=a;i++){
                fact=fact*i;

            }
            document.write(fact);

        }
    </script>
</head>
<body>
    <div>
        <input type="text"id="factorial">
    </div>   <br>     
    <input type="button" value="factorial" onclick="factorials()">


</body>
</html>
